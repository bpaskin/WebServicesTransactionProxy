<server description="WS-AT Account Web Service Server">

    <featureManager>        
        <feature>xmlWS-4.0</feature>
        <feature>xmlBinding-4.0</feature>
        <feature>wsAtomicTransaction-1.2</feature>
        <feature>enterpriseBeansLite-4.0</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint" httpPort="9081" httpsPort="9444" host="*" />

    <wsAtomicTransaction SSLEnabled="true" SSLRef="defaultSSLConfig" clientAuth="false"/>
    <webServices atomicTransaction="supported"/>

    <ssl id="defaultSSLConfig" keyStoreRef="defaultKeyStore" trustStoreRef="defaultTrustStore" verifyHostname="false"/>
    <keyStore id="defaultKeyStore" password="Liberty" location="${server.config.dir}/resources/security/key.p12" />
    <keyStore id="defaultTrustStore" password="Liberty" location="${server.config.dir}/resources/security/key.p12"/>
</server>